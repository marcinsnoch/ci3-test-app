{% extends 'layouts/application.twig' %}

{% set title = 'Zamówienia' %}
{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">{{ title }}</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="{{ base_url() }}">Ekran główny</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ base_url('products') }}">{{ title }}</a>
                    </li>
                    <li class="breadcrumb-item active">Dodaj</li>
                </ol>
            </div>
        </div>
        <nav class="navbar navbar-expand navbar-white navbar-light border mb-2 p-1">
            <ul class="nav">
                <li class="nav-item">
                    <a href="{{ base_url('orders') }}" class="nav-link">
                        <i class="fas fa-reply"></i> Wróć
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header clearfix">
                <h3 class="card-title">
                    <i class="fas fa-cart-plus"></i> Nowe zamówienie
                </h3>
                <div class="card-tools">
                    <small class="float-right">Data: {{ "now"|format_datetime() }}</small>
                </div>
            </div>
            <div class="card-body">

                <div class="form-group">
                    <label for="inputAccount">Konto</label>
                    {{ form_dropdown('account_id', accounts, set_value('account_id'), form_error('account_id') ? 'class="form-control is-invalid"' : 'class="form-control"') }}
                    {{ form_error('account_id') }}
                </div>

            </div>
            <div class="card-footer clearfix">
                <a href="{{ base_url('orders') }}" class="btn btn-default"><i class="fa fa-reply"></i> Wróć</a>
                <button type="submit" name="create_product" class="btn btn-primary float-right" value="true">
                    <i class="fa fa-save"></i> Zapisz
                </button>
            </div>
        </div>
    </div>
</section>
{% endblock %}
