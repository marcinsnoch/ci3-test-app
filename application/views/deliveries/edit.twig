{% extends "layouts/application.twig" %}

{% set title = 'Dostawy' %}
{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">{{ title }}</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="{{ base_url() }}">Ekran główny</a></li>
                    <li class="breadcrumb-item"><a href="{{ base_url('deliveries') }}">{{ title }}</a></li>
                    <li class="breadcrumb-item active">Edycja</li>
                </ol>
            </div>
        </div>
        <nav class="navbar navbar-expand navbar-white navbar-light border mb-2 p-1">
            <ul class="nav">
                <li class="nav-item">
                    <a href="{{ base_url('deliveries') }}" class="nav-link">
                        <i class="fas fa-reply"></i> Wróć
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-edit"></i> Edytuj dostawę</h3>
            </div>
            {{ form_open() }}
            <div class="card-body">
                <div class="form-group">
                    <label for="inputProductNumber">Produkt</label>
                    <input type="text" name="number" id="inputProductNumber" class="form-control{{ form_error('number') ? ' is-invalid'}}" value="{{ set_value('number', delivery.product.number) }}" disabled>
                    {{ form_error('number') }}
                </div>
                <div class="form-group">
                    <label for="inputDate">Data dostawa</label>
                    <input type="text" name="date" id="inputDate" class="form-control{{ form_error('date') ? ' is-invalid'}}" value="{{ set_value('date', delivery.date) }}">
                </div>
                <div class="form-group">
                    <label for="inputQuantity">Ilość</label>
                    <input type="text" name="quantity" id="inputQuantity" class="form-control{{ form_error('quantity') ? ' is-invalid'}}" value="{{ set_value('quantity', delivery.quantity) }}">
                    {{ form_error('quantity') }}
                </div>
            </div>
            <div class="card-footer clearfix">
                <a href="{{ base_url('products') }}" class="btn btn-default"><i class="fa fa-reply"></i> Wróć</a>
                <button type="submit" name="create_product" class="btn btn-primary float-right" value="true"><i class="fa fa-save"></i> Create</button>
            </div>
            {{ form_close() }}
        </div>
    </div>
</section>
{% endblock %}
