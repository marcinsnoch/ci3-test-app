{% extends "layouts/auth.twig" %}

{% block title %}Zapomniałeś hasła{% endblock %}

{% block content %}
    <div class="login-box">
        <div class="login-logo">
            {{ config.item('app_name') }}
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Jesteś tylko o krok od nowego hasła, odzyskaj hasło teraz.</p>
                {{ form_open('recovery-password?token='~token) }}
                <div class="input-group mb-3">
                    <input type="password" name="password" class="form-control{{ form_error('password') ? ' is-invalid'}}" placeholder="Hasło">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    {{ form_error('password') }}
                </div>
                <div class="input-group mb-3">
                    <input type="password" name="confirm_password" class="form-control{{ form_error('confirm_password') ? ' is-invalid'}}" placeholder="Powtórz hasło">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    {{ form_error('confirm_password') }}
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" name="recovery" class="btn btn-primary btn-block" value="true">Zmień hasło</button>
                    </div>
                </div>
                {{ form_close() }}
                <p class="mt-3 mb-1">
                    <a href="{{ base_url('/login') }}">Zaloguj się</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
